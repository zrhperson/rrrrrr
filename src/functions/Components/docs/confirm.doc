/**
 * @title 基本功能
 */
import confirm from 'bocomui/confirm'
import Button from 'bocomui/Button'

const ConfirmBasic = () => {
  return (
    <Button onClick={() => {
      confirm('确认删除吗', () => {
        console.log('confirmed')
      })
    }}>删除确认</Button>
  )
}

/**
 * @title 自定义操作
 */
import confirm from 'bocomui/confirm'
import Button from 'bocomui/Button'

const ConfirmCustom = () => {
  const operation = (
    <div>
      <Button>确认</Button>
      <Button type="minor">继续</Button>
      <Button type="minor" onClick={confirm.close}>取消</Button>
    </div>
  )
  return (
    <Button onClick={() => {
      confirm({
        content: '确认删除吗',
        operation
      })
    }}>删除确认</Button>
  )
}

@component confirm
